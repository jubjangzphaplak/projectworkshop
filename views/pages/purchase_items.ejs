<% include ../partials/header %>


<div class="jumbotron">
<table class="table">
    <thead>
        <tr>
            <th>Purchase ID</th>
            <th>Product ID</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>State</th>
            
            
        </tr>
    </thead>
    <tbody id="myTable">
    <% purchase_items.forEach(function(purchase_item){ %>
        <tr>
            <td scope="row"><%= purchase_item.purchase_id%></td>
            <td><%= purchase_item.product_id%></td>
            <td><%= purchase_item.price%></td>
            <td><%= purchase_item.quantity%></td>
            <td><%= purchase_item.state%></td>
            
        </tr></div>
        <% }); %>
    </tbody>
</table>
<script>
    $(document).ready(function(){
      $("#myInput").on("keyup", function() {
        var value = $(this).val().toLowerCase();
        $("#myTable tr").filter(function() {
          $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
        });
      });
    });
    </script>
