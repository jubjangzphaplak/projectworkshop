<% include ../partials/header %>
<script language="javascript">
    function AlertDelete() {

      alert('Do you want to delete product');

    }


   $(document).ready(function(){
      $("#myInput").on("keyup", function() {
        var value = $(this).val().toLowerCase();
        $("#myTable tr").filter(function() {
          $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
        });
      });
    });

  
  </script>
<br>
<h1><center>Product</h1></center><br>
<div class="jumbotron">
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Price</th>
            <th><a class="btn btn-primary" href="/addnewproduct/" role="button">Add New</a></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
     <% products.forEach(function(product) 
     { %>
        
        
        <tr>
            <td scope="row"><%=product.id%></td>
            <td><%=product.title%></td>
            <td><%=product.price%></td>
            <td><a class="btn btn-warning" href="/products/<%=product.id%>" role="button">Edit</a></td>
            <td><a name="" id="" OnClick="JavaScript:AlertDelete();" class="btn btn-danger" href="/product_delete/<%=product.id%>" role="button">Delete</a></td>
           
            
        </tr>
      <%});%>
           
        
    </tbody></div>
</table>




    </body>
    </html>



<% include ../partials/footer %>